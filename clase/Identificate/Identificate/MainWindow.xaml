<Window x:Class="Identificate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenido" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            
            <TextBlock Name="tbkTitulo" Text="Identificacion" FontFamily="Arial" FontSize="40"/>
            <TextBlock Text="Usuario:" Name="tbxUsu" FontFamily="Arial" FontSize="25" Height="33"/>
            <TextBox Name="tbxusuario" Height="33" Width="400" Margin="15"/>
            <TextBlock Text="Clave:" Name="tbkClave" FontFamily="Arial" FontSize="25" Height="33"/>
            <PasswordBox PasswordChar="*"  Name="tbxclave" Height="33" Width="400" Margin="15"/>
            <StackPanel Height="80" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Aceptar" Name="btnaceptar" Width="130" Margin="10,10,10,30" Click="Aceptar"/>
                <Button Content="Cancelar" Name="btncancelar" Width="130" Margin="10,10,10,30" Click="Cancelar"/>
            </StackPanel>


        </StackPanel>
    </Grid>
</Window>
