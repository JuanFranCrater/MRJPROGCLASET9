<Window x:Class="ejdemuchos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Slider x:Name="imagentamanio" Minimum="0" Maximum="200" HorizontalAlignment="Left" Margin="148,44,0,0" VerticalAlignment="Top" Width="248"/>
        <Label Content="Ajustar el tamaño de la imagen" HorizontalAlignment="Left" Margin="189,10,0,0" VerticalAlignment="Top"/>
        <Rectangle x:Name="caja"  Fill="Red" HorizontalAlignment="Left" Height="{Binding Value, ElementName=imagentamanio}" Margin="10,105,0,0" Stroke="Black" VerticalAlignment="Top" Width="{Binding Value, ElementName=imagentamanio}"/>

    </Grid>
</Window>
