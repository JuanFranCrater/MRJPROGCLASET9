<Window x:Class="WpfEnlaceADatos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:ejemplo="clr-namespace:WpfEnlaceADatos" >
    <Window.Resources>
        <ejemplo:Film x:Key="filmInfiltrados" 
                      Titulo="Infiltrado" Director="Spy" Genero="Mafia"
                        Oscar="{x:Null}" Calificacion="10"/>
    </Window.Resources>
    <Grid>
        <Label Content="Género" HorizontalAlignment="Left" Margin="51,130,0,0" VerticalAlignment="Top"/>
        <Label Content="Oscar?" HorizontalAlignment="Left" Margin="51,250,0,0" VerticalAlignment="Top"/>
        <Label Content="Calificacion" HorizontalAlignment="Left" Margin="51,190,0,0" VerticalAlignment="Top"/>
        <Label Content="Director" HorizontalAlignment="Left" Margin="51,70,0,0" VerticalAlignment="Top"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="51,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
