<Window x:Class="Selectores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selectores" Height="350" Width="525">
    <StackPanel>
        <ComboBox Name="Ciudades" FontFamily="Arial" FontWeight="Bold" SelectedIndex="0">
            <TextBlock>Malaga</TextBlock>
            <TextBlock><Run Text="Almeria"/></TextBlock>
            <TextBlock>Madrid</TextBlock>
            <TextBlock>Barcelona</TextBlock>
            <Button Name="btn" Content="hola"/>
        </ComboBox>
        <ListBox x:Name="Ciudades2" FontFamily="Arial" FontWeight="Bold" SelectedIndex="0" Margin="70" SelectionChanged="Ciudades2_SelectionChanged">
            <TextBlock><Run Text="Almeria"/></TextBlock>
            <TextBlock><Run Text="Malaga"/></TextBlock>
            <TextBlock><Run Text="Madrid"/></TextBlock>
            <TextBlock><Run Text="Barcelona"/></TextBlock>
        </ListBox>
    </StackPanel>
</Window>
